<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate">
  <meta http-equiv="Pragma" content="no-cache">
  <meta http-equiv="Expires" content="0">
  <title><%= title %></title>
  <style>body { visibility: hidden; }</style>
  <script>
    const token = localStorage.getItem('nimetsuCasinoToken') || localStorage.getItem('token');
    if (!token) { window.location.replace('/login'); }
    else { document.write('<style>body { visibility: visible; }</style>'); }
  </script>
  <link rel="stylesheet" href="/css/admin-dashboard.css">
</head>
<body>
  <div class="admin-container">
    <%- include('../partials/admin-sidebar') %>

    <main class="admin-content">
      <%- include('../partials/admin-header', { pageTitle: 'Gestión de Usuarios' }) %>

    <div class="content-wrapper">
      <!-- Estadísticas de usuarios -->
      <div class="stats-row">
        <div class="stat-mini">
          <span class="stat-value"><%= total %></span>
          <span class="stat-label">Total Usuarios</span>
        </div>
        <div class="stat-mini">
          <span class="stat-value"><%= users.filter(u => u.role === 'admin').length %></span>
          <span class="stat-label">Administradores</span>
        </div>
        <div class="stat-mini">
          <span class="stat-value"><%= users.filter(u => u.balance > 0).length %></span>
          <span class="stat-label">Con Balance</span>
        </div>
      </div>

      <!-- Tabla de usuarios -->
      <div class="table-container">
        <div class="table-header">
          <h2>Lista de Usuarios</h2>
          <div class="header-actions">
            <div class="search-box">
              <input type="text" id="searchUser" placeholder="Buscar por nickname o email...">
            </div>
            <button class="btn-primary" onclick="showCreateUserModal()">
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                <circle cx="8.5" cy="7" r="4"></circle>
                <line x1="20" y1="8" x2="20" y2="14"></line>
                <line x1="23" y1="11" x2="17" y2="11"></line>
              </svg>
              Nuevo Usuario
            </button>
          </div>
        </div>

        <table class="data-table">
          <thead>
            <tr>
              <th>ID</th>
              <th>Nickname</th>
              <th>Email</th>
              <th>RUT</th>
              <th>Balance</th>
              <th>Rol</th>
              <th>Registro</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach(user => { %>
              <tr>
                <td><strong>#<%= user.userId %></strong></td>
                <td><%= user.nickname %></td>
                <td><%= user.email %></td>
                <td><%= user.rut || '-' %></td>
                <td class="balance"><%= user.balance.toLocaleString('es-CL') %></td>
                <td>
                  <span class="role-badge <%= user.role %>">
                    <%= user.role === 'admin' ? 'Admin' : user.role === 'superadmin' ? 'Super Admin' : 'User' %>
                  </span>
                </td>
                <td><%= new Date(user.createdAt).toLocaleDateString('es-CL') %></td>
                <td>
                  <button class="btn-small btn-info" onclick="viewUser(<%= user.userId %>)">Ver</button>
                  <button class="btn-small btn-warning" onclick="editUser(<%= user.userId %>)">Editar</button>
                  <button class="btn-small btn-primary" onclick="adjustBalance(<%= user.userId %>)">Balance</button>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>

        <!-- Paginación -->
        <div class="pagination">
          <% if (currentPage > 1) { %>
            <a href="?page=<%= currentPage - 1 %>" class="btn-page">Anterior</a>
          <% } %>
          <span class="page-info">Página <%= currentPage %> de <%= totalPages %></span>
          <% if (currentPage < totalPages) { %>
            <a href="?page=<%= currentPage + 1 %>" class="btn-page">Siguiente</a>
          <% } %>
        </div>
      </div>
      </div>
    </main>
  </div>

  <script src="/js/admin-common.js"></script>
  <script src="/js/admin-users.js"></script>
</body>
</html>