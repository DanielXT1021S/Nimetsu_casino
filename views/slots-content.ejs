                    </div>
                </div>

                <div class="machine-right">
                    <div class="info-panel">
                        <!-- Secci√≥n de Apuesta -->
                        <div class="bet-section-full">
                            <div class="section-header">APUESTA</div>
                            <div class="bet-input-wrapper">
                                <span class="currency-symbol">$</span>
                                <input type="number" id="betInput" min="10" step="10" value="100"/>
                                <span class="currency-label">CLP</span>
                            </div>
                            <div class="quick-bets">
                                <button class="quick-bet-btn chip-btn" data-amount="100">100</button>
                                <button class="quick-bet-btn chip-btn" data-amount="500">500</button>
                                <button class="quick-bet-btn chip-btn" data-amount="1000">1K</button>
