                                    <div class="symbol-cell" data-row="2"><div class="symbol reel-symbol">üçé</div></div>
                                </div>
                                <div class="reel" data-reel="3" id="column4">
                                    <div class="symbol-cell" data-row="0"><div class="symbol reel-symbol">üçä</div></div>
                                    <div class="symbol-cell" data-row="1"><div class="symbol reel-symbol">üçã</div></div>
                                    <div class="symbol-cell" data-row="2"><div class="symbol reel-symbol">üçá</div></div>
                                </div>
                                <div class="reel" data-reel="4" id="column5">
