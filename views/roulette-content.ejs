<!-- Main Roulette Area - CONTENIDO ESPECÍFICO DE RULETA -->
<div class="roulette-game-area">
    <!-- Roulette Wheel Section -->
    <div class="wheel-container">
        <div class="wheel-wrapper">
            <svg class="roulette-svg" id="rouletteSvg" viewBox="0 0 400 400" xmlns="http://www.w3.org/2000/svg">
                <!-- RUEDA FIJA -->
                <g id="wheelGroup">
                    <!-- Borde negro exterior -->
                    <circle cx="200" cy="200" r="190" fill="#070708" />
                    <!-- Aro negro grueso -->
                    <circle cx="200" cy="200" r="180" fill="#151515" />
                    <!-- Disco dorado base -->
                    <circle cx="200" cy="200" r="170" fill="#d4af37" />

                    <!-- Anillo de casillas (generado por JS) -->
                    <g id="pocketsGroup"></g>

                    <!-- Disco dorado interno -->
                    <circle cx="200" cy="200" r="120" fill="#e0b84f" />
                    <!-- Aro negro interior -->
                    <circle cx="200" cy="200" r="90" fill="#111" />
                    <!-- Disco central -->
                    <circle cx="200" cy="200" r="70" fill="#d4af37" />
                    <!-- Botón central claro -->
                    <circle cx="200" cy="200" r="35" fill="#f6db8c" />
                    <line x1="175" y1="200" x2="225" y2="200" stroke="#b3881b" stroke-width="4" />
                    <line x1="200" y1="175" x2="200" y2="225" stroke="#b3881b" stroke-width="4" />
                </g>

                <!-- SOMBRA de la bola -->
                <circle id="ballShadow" cx="200" cy="55" r="5" fill="black" opacity="0.4" />

                <!-- BOLA -->
                <circle id="ball" cx="200" cy="50" r="8" fill="#ffffff" />

                <!-- Puntero arriba -->
                <polygon points="200,18 188,48 212,48" fill="#f9d26a" stroke="#111" stroke-width="2" />
            </svg>
        </div>
        <div class="last-numbers">
            <h4>Últimos Resultados</h4>
            <div id="lastResults" class="results-display"></div>
        </div>
    </div>

    <!-- Betting Table Section -->
    <div class="betting-table-wrapper">
        <div class="betting-header">
            <h2>MESA DE APUESTAS</h2>
            <span class="total-bet">Total: <span id="totalBet">$0</span></span>
        </div>

        <!-- Tablero estilo casino profesional -->
        <div class="roulette-board">
            <div class="board-top">
                <!-- 0 a la izquierda (triángulo) -->
                <div class="zero-wrapper">
                    <div class="zero-shape bet-cell" data-bet-type="straight" data-bet-value="0">
                        <span>0</span>
                    </div>
                </div>

                <!-- Bloque principal -->
                <div class="main-block">
                    <!-- Números + columna 2 to 1 -->
                    <div class="numbers-plus-two">
                        <!-- 3 filas x 12 columnas -->
                        <div class="numbers-grid" id="numbersGrid">
                            <!-- Fila superior: 3, 6, 9, ..., 36 -->
                            <div class="bet-cell number red" data-bet-type="straight" data-bet-value="3"><span>3</span></div>
                            <div class="bet-cell number black" data-bet-type="straight" data-bet-value="6"><span>6</span></div>
                            <div class="bet-cell number red" data-bet-type="straight" data-bet-value="9"><span>9</span></div>
                            <div class="bet-cell number red" data-bet-type="straight" data-bet-value="12"><span>12</span></div>
                            <div class="bet-cell number black" data-bet-type="straight" data-bet-value="15"><span>15</span></div>
                            <div class="bet-cell number red" data-bet-type="straight" data-bet-value="18"><span>18</span></div>
                            <div class="bet-cell number red" data-bet-type="straight" data-bet-value="21"><span>21</span></div>
                            <div class="bet-cell number black" data-bet-type="straight" data-bet-value="24"><span>24</span></div>
                            <div class="bet-cell number red" data-bet-type="straight" data-bet-value="27"><span>27</span></div>
                            <div class="bet-cell number red" data-bet-type="straight" data-bet-value="30"><span>30</span></div>
                            <div class="bet-cell number black" data-bet-type="straight" data-bet-value="33"><span>33</span></div>
                            <div class="bet-cell number red" data-bet-type="straight" data-bet-value="36"><span>36</span></div>

                            <!-- Fila media: 2, 5, 8, ..., 35 -->
                            <div class="bet-cell number black" data-bet-type="straight" data-bet-value="2"><span>2</span></div>
                            <div class="bet-cell number red" data-bet-type="straight" data-bet-value="5"><span>5</span></div>
                            <div class="bet-cell number black" data-bet-type="straight" data-bet-value="8"><span>8</span></div>
                            <div class="bet-cell number black" data-bet-type="straight" data-bet-value="11"><span>11</span></div>
                            <div class="bet-cell number red" data-bet-type="straight" data-bet-value="14"><span>14</span></div>
                            <div class="bet-cell number black" data-bet-type="straight" data-bet-value="17"><span>17</span></div>
                            <div class="bet-cell number black" data-bet-type="straight" data-bet-value="20"><span>20</span></div>
                            <div class="bet-cell number red" data-bet-type="straight" data-bet-value="23"><span>23</span></div>
                            <div class="bet-cell number black" data-bet-type="straight" data-bet-value="26"><span>26</span></div>
                            <div class="bet-cell number black" data-bet-type="straight" data-bet-value="29"><span>29</span></div>
                            <div class="bet-cell number red" data-bet-type="straight" data-bet-value="32"><span>32</span></div>
                            <div class="bet-cell number black" data-bet-type="straight" data-bet-value="35"><span>35</span></div>

                            <!-- Fila inferior: 1, 4, 7, ..., 34 -->
                            <div class="bet-cell number red cell-row-last" data-bet-type="straight" data-bet-value="1"><span>1</span></div>
                            <div class="bet-cell number black cell-row-last" data-bet-type="straight" data-bet-value="4"><span>4</span></div>
                            <div class="bet-cell number red cell-row-last" data-bet-type="straight" data-bet-value="7"><span>7</span></div>
                            <div class="bet-cell number black cell-row-last" data-bet-type="straight" data-bet-value="10"><span>10</span></div>
                            <div class="bet-cell number black cell-row-last" data-bet-type="straight" data-bet-value="13"><span>13</span></div>
                            <div class="bet-cell number red cell-row-last" data-bet-type="straight" data-bet-value="16"><span>16</span></div>
                            <div class="bet-cell number red cell-row-last" data-bet-type="straight" data-bet-value="19"><span>19</span></div>
                            <div class="bet-cell number black cell-row-last" data-bet-type="straight" data-bet-value="22"><span>22</span></div>
                            <div class="bet-cell number red cell-row-last" data-bet-type="straight" data-bet-value="25"><span>25</span></div>
                            <div class="bet-cell number black cell-row-last" data-bet-type="straight" data-bet-value="28"><span>28</span></div>
                            <div class="bet-cell number black cell-row-last" data-bet-type="straight" data-bet-value="31"><span>31</span></div>
                            <div class="bet-cell number red cell-row-last" data-bet-type="straight" data-bet-value="34"><span>34</span></div>
                        </div>

                        <!-- Columna 2 to 1 -->
                        <div class="two-to-one-col">
                            <div class="bet-cell two-to-one" data-bet-type="column_3rd">2 to 1</div>
                            <div class="bet-cell two-to-one" data-bet-type="column_2nd">2 to 1</div>
                            <div class="bet-cell two-to-one" data-bet-type="column_1st">2 to 1</div>
                        </div>
                    </div>

                    <!-- Docenas -->
                    <div class="dozens-row">
                        <div class="bet-cell dozen" data-bet-type="dozen_1st">1st 12</div>
                        <div class="bet-cell dozen" data-bet-type="dozen_2nd">2nd 12</div>
                        <div class="bet-cell dozen" data-bet-type="dozen_3rd">3rd 12</div>
                    </div>

                    <!-- Apuestas exteriores -->
                    <div class="outside-row">
                        <div class="bet-cell outside" data-bet-type="low">1 to 18</div>
                        <div class="bet-cell outside" data-bet-type="even">EVEN</div>
                        <div class="bet-cell outside symbol-red" data-bet-type="red"><span>RED</span></div>
                        <div class="bet-cell outside symbol-black" data-bet-type="black"><span>BLACK</span></div>
                        <div class="bet-cell outside" data-bet-type="odd">ODD</div>
                        <div class="bet-cell outside" data-bet-type="high">19 to 36</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bets Summary -->
        <div class="bets-summary">
            <div class="summary-title">Mis Apuestas</div>
            <div id="betsSummary" class="summary-list">
                <!-- Bets will be listed here -->
            </div>
        </div>
    </div>
</div>

