<!-- Win Overlay -->
<div class="win-overlay" id="winOverlay">
    <div class="win-content">
        <div class="win-icon"><i class="fas fa-trophy"></i></div>
        <div class="win-amount" id="winAmount"></div>
        <div class="win-hand" id="winHand"></div>
    </div>
</div>

<!-- Lose Overlay -->
<div class="lose-overlay" id="loseOverlay">
    <div class="lose-content">
        <div class="lose-icon"><i class="fas fa-times-circle"></i></div>
        <div class="lose-amount" id="loseAmount"></div>
        <div class="lose-message" id="loseMessage"></div>
    </div>
</div>

<!-- Toast -->
<div class="toast" id="toast">
    <i class="fas fa-info-circle"></i>
    <span class="toast-message"></span>
</div>

<!-- Rules Modal -->
<div class="rules-modal" id="rulesModal">
    <div class="rules-modal-overlay" id="rulesModalOverlay"></div>
    <div class="rules-modal-content">
        <div class="rules-modal-header">
            <h2><i class="fas fa-book"></i> <span id="rulesModalTitle">Reglas del Juego</span></h2>
            <button class="rules-modal-close" id="rulesModalClose">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <div class="rules-modal-body" id="rulesModalBody">
            <!-- El contenido de reglas se cargará aquí dinámicamente -->
        </div>
    </div>
</div>

<!-- Prizes Modal -->
<div class="prizes-modal" id="prizesModal">
    <div class="prizes-modal-overlay" id="prizesModalOverlay"></div>
    <div class="prizes-modal-content">
        <div class="prizes-modal-header">
            <h2><i class="fas fa-trophy"></i> Premios y Pagos</h2>
            <button class="prizes-modal-close" id="prizesModalClose">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <div class="prizes-modal-body" id="prizesModalBody">
            <!-- El contenido de premios se cargará aquí dinámicamente -->
        </div>
    </div>
</div>

<!-- Settings Modal -->
<div class="rules-modal" id="settingsModal">
    <div class="rules-modal-overlay" id="settingsModalOverlay"></div>
    <div class="rules-modal-content">
        <div class="rules-modal-header">
            <h2><i class="fas fa-cog"></i> Configuración</h2>
            <button class="rules-modal-close" id="settingsModalClose">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <div class="rules-modal-body">
            <h3><i class="fas fa-desktop"></i> Pantalla</h3>
            <div class="settings-option">
                <button class="settings-btn-action" id="fullscreenToggle">
                    <i class="fas fa-expand"></i> Activar Pantalla Completa
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Loading Overlay -->
<div class="loading-overlay" id="loadingOverlay">
    <div class="loading-spinner">
        <i class="fas fa-spinner fa-spin"></i>
    </div>
</div>
