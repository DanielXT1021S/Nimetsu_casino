<div class="side-menu" id="sideMenu">
    <div class="menu-header">
        <h2><i class="fas fa-gamepad"></i> MENÃš</h2>
        <button class="menu-close-btn" id="closeMenuBtn">
            <i class="fas fa-times"></i>
        </button>
    </div>
    <div class="menu-content">
        <a href="/dashboard" class="menu-item">
            <i class="fas fa-home"></i>
            <span>Inicio</span>
        </a>
        
        <div class="menu-divider"></div>
        
        <% 
        // Determinar el nombre del juego actual para las reglas
        let gameName = 'este Juego';
        let gameIcon = 'gamepad';
        if (currentGame === 'blackjack') {
            gameName = 'Blackjack';
            gameIcon = 'spade';
        } else if (currentGame === 'poker') {
            gameName = 'Poker';
            gameIcon = 'diamond';
        } else if (currentGame === 'roulette') {
            gameName = 'la Ruleta';
            gameIcon = 'circle-notch';
        } else if (currentGame === 'slots') {
            gameName = 'Slots';
            gameIcon = 'dice';
        } else if (currentGame === 'template') {
            gameName = 'este Juego';
            gameIcon = 'gamepad';
        }
        %>
        
        <a href="#" class="menu-item" id="rulesBtn">
            <i class="fas fa-book"></i>
            <span>Reglas de <%= gameName %></span>
        </a>
        
        <a href="#" class="menu-item" id="prizesBtn">
            <i class="fas fa-trophy"></i>
            <span>Premios</span>
        </a>
        
        <div class="menu-divider"></div>
        
        <a href="/logout" class="menu-item menu-item-danger">
            <i class="fas fa-sign-out-alt"></i>
            <span>Salir</span>
        </a>
    </div>
</div>
